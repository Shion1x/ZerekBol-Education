<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefWidth="900" prefHeight="520"
             xmlns="http://javafx.com/javafx"
             xmlns:fx="http://javafx.com/fxml"
             fx:controller="org.example.controller.LoginController">


<children>
        <VBox spacing="14" alignment="CENTER" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" styleClass="card">
            <padding>
                <Insets top="26" right="28" bottom="26" left="28"/>
            </padding>

            <Label text="EduPro" styleClass="title"/>
            <Label text="Вход в систему" styleClass="subtitle"/>

            <TextField fx:id="usernameField" promptText="Логин" styleClass="field"/>
            <PasswordField fx:id="passwordField" promptText="Пароль" styleClass="field"/>

            <Label fx:id="messageLabel" text="" styleClass="error"/>

            <Button text="Войти" onAction="#onLogin" styleClass="btn-primary"/>
            <Button text="Создать аккаунт" onAction="#onGoRegister" styleClass="btn-secondary"/>
        </VBox>
    </children>
</AnchorPane>
